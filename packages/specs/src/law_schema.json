{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "My schema",
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "articles": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "creator": {
            "type": "string"
        },
        "sections": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Section"
            }
        }
    },
    "required": [
        "articles",
        "name"
    ],
    "definitions": {
        "Section": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "title"
            ]
        }
    }
}
